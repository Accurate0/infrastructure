<policies>
    <inbound>
        <base />
        <rewrite-uri template="@{
            return "/users/" + context.Request.MatchedParameters.GetValueOrDefault("UserId") + "?$select={{GraphUserPropertySelect}}";
        }" copy-unmatched-params="false" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>
