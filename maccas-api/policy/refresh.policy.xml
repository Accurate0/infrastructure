<policies>
    <inbound>
        <send-request mode="new" response-variable-name="lambda-response" timeout="120" ignore-error="false">
            <set-url>{{MaccasLambdaBackend}}</set-url>
            <set-method>POST</set-method>
          </send-request>

          <send-request mode="new" response-variable-name="lambda-singapore-response" timeout="120" ignore-error="false">
            <set-url>{{MaccasLambdaSingaporeBackend}}</set-url>
            <set-method>POST</set-method>
          </send-request>

          <choose>
            <when condition="@(((IResponse)context.Variables["lambda-response"]).StatusCode == 204 && ((IResponse)context.Variables["lambda-singapore-response"]).StatusCode == 204)">
                <return-response>
                    <set-status code="204" reason="No Content" />
                  </return-response>
           </when>
           <otherwise>
               <return-response>
                 <set-status code="500" reason="Internal Server Error" />
                 <set-body></set-body>
               </return-response>
            </otherwise>
           </choose>
    </inbound>
    <backend>
        <!-- Don't forward -->
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>
