<policies>
    <inbound>
        <base />
        <cors>
            <allowed-origins>
                <origin>http://localhost:3000/</origin>
                <origin>https://maccas.anurag.sh/</origin>
            </allowed-origins>
            <allowed-methods preflight-result-max-age="300">
                <method>GET</method>
                <method>POST</method>
                <method>DELETE</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
            <expose-headers>
                <header>*</header>
            </expose-headers>
        </cors>
        <validate-parameters specified-parameter-action="prevent" unspecified-parameter-action="prevent" errors-variable-name="validationErrors">
            <headers specified-parameter-action="ignore" unspecified-parameter-action="ignore" />
            <query specified-parameter-action="prevent" unspecified-parameter-action="prevent" />
            <path specified-parameter-action="prevent" />
        </validate-parameters>
        <set-header name="X-API-Key" exists-action="override">
            <value>{{MaccasLambdav2ApiKey}}</value>
        </set-header>
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <set-header name="Cache-Control" exists-action="skip">
            <value>no-cache</value>
        </set-header>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>
