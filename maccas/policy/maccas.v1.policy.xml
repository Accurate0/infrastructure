<policies>
    <inbound>
        <base />
        <cors>
            <allowed-origins>
                <origin>http://localhost:3000/</origin>
                <origin>https://dev.maccas.one/</origin>
                <origin>https://maccas.one/</origin>
            </allowed-origins>
            <allowed-methods preflight-result-max-age="300">
                <method>GET</method>
                <method>POST</method>
                <method>DELETE</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
            <expose-headers>
                <header>*</header>
            </expose-headers>
        </cors>
        <validate-parameters specified-parameter-action="prevent" unspecified-parameter-action="prevent" errors-variable-name="validationErrors">
            <headers specified-parameter-action="ignore" unspecified-parameter-action="ignore" />
            <query specified-parameter-action="prevent" unspecified-parameter-action="prevent" />
            <path specified-parameter-action="prevent" />
        </validate-parameters>
        <set-variable name="isDev" value="@(context.Request.Headers.GetValueOrDefault("Origin", "").Contains("dev.maccas.one"))" />
        <choose>
            <when condition="@(context.Variables.GetValueOrDefault<bool>("isDev", false))">
                <set-backend-service base-url="{{MaccasDevBackendUrl}}" />
                <set-header name="X-API-Key" exists-action="override">
                    <value>{{MaccasLambdaDevApiKey}}</value>
                </set-header>
            </when>
            <otherwise>
                <set-header name="X-API-Key" exists-action="override">
                    <value>{{MaccasLambdaApiKey}}</value>
                </set-header>
            </otherwise>
        </choose>
    </inbound>
    <backend>
        <retry
            condition="@(context.Response.StatusCode >= 500)"
            count="5"
            interval="3"
            max-interval="5"
            first-fast-retry="true"
            delta="5"
        >
            <forward-request buffer-request-body="true" />
        </retry>
    </backend>
    <outbound>
        <set-header name="Cache-Control" exists-action="skip">
            <value>no-cache</value>
        </set-header>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>
